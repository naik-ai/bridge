# Application Settings
APP_NAME=peter-api
APP_ENV=development
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Database (Postgres)
DATABASE_URL=postgresql+asyncpg://peter:password@localhost:5432/peter_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
CACHE_DEFAULT_TTL=86400
CACHE_TYPE=redis

# Google Cloud Project
GCP_PROJECT_ID=my-gcp-project
GCP_REGION=us-central1
GCP_SERVICE_ACCOUNT_EMAIL=peter-api@my-gcp-project.iam.gserviceaccount.com

# BigQuery
BIGQUERY_DATASET=analytics
BIGQUERY_LOCATION=US
BIGQUERY_MAX_BYTES_BILLED=100000000
BIGQUERY_QUERY_TIMEOUT=60
BIGQUERY_USE_QUERY_CACHE=true
BIGQUERY_ALLOWED_DATASETS=analytics,staging,mart
BIGQUERY_CREDENTIALS_PATH=/path/to/service-account.json

# Google Cloud Storage (YAML Storage)
GCS_BUCKET=peter-dashboards
GCS_DASHBOARDS_PREFIX=dashboards/

# Secret Manager
USE_SECRET_MANAGER=false
SECRET_MANAGER_PROJECT_ID=my-gcp-project

# Authentication (Google OAuth)
GOOGLE_OAUTH_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=xxx
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback
ALLOWED_EMAILS=user1@example.com,user2@example.com
ALLOWED_EMAIL_DOMAINS=example.com,mycompany.com

# Session Management
SESSION_SECRET_KEY=change-me-in-production-use-secret-manager
SESSION_COOKIE_NAME=peter_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
SESSION_EXPIRES_DAYS=7
SESSION_REFRESH_THRESHOLD_DAYS=1

# OpenTelemetry
OTEL_SERVICE_NAME=peter-api
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_TRACES_EXPORTER=gcp_trace
OTEL_METRICS_EXPORTER=none
OTEL_LOGS_EXPORTER=none
OTEL_TRACE_SAMPLING_RATE=1.0
OTEL_ENABLE_INSTRUMENTATION=true

# Feature Flags
ENABLE_PRECOMPUTE=true
ENABLE_LLM_VERIFICATION=true
ENABLE_COST_TRACKING=true
ENABLE_QUERY_LOGGING=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Performance Tuning
MAX_CONCURRENT_QUERIES=10
QUERY_RESULT_CACHE_SIZE=1000
LINEAGE_CACHE_TTL=3600

# Development/Testing
TESTING=false
TEST_DATABASE_URL=postgresql+asyncpg://peter:password@localhost:5432/peter_test_db
MOCK_BIGQUERY=false
SKIP_AUTH=false

# Test Environment Configuration
# This file is used for running tests

# Environment
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=false
TESTING=true

# Database (PostgreSQL for tests - will fail gracefully if not available)
DATABASE_URL=postgresql+asyncpg://test:test@localhost:5432/test_db

# GCP Project
GCP_PROJECT_ID=test-project
BIGQUERY_DATASET=test_dataset
GCS_BUCKET=test-bucket

# Google OAuth (test values)
GOOGLE_OAUTH_CLIENT_ID=test-client-id
GOOGLE_OAUTH_CLIENT_SECRET=test-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# Session
SESSION_SECRET_KEY=test-secret-key-for-testing-only-not-secure

# BigQuery Settings
BIGQUERY_MAX_BYTES_BILLED=100000000
BIGQUERY_QUERY_TIMEOUT=60
BIGQUERY_USE_QUERY_CACHE=true
BIGQUERY_LOCATION=US

# Cache
CACHE_TYPE=in-process
CACHE_DEFAULT_TTL=86400
QUERY_RESULT_CACHE_SIZE=1000

# Secret Manager
USE_SECRET_MANAGER=false

# OpenTelemetry
OTEL_ENABLED=false
OTEL_SERVICE_NAME=peter-api-test
OTEL_TRACE_SAMPLING_RATE=0.0
